#!/usr/bin/env bash

# update crontab

set -ETeuo pipefail

declare BASEDIR; BASEDIR="$( cd "$( dirname $0 )/.." && pwd )"

services="$( 
  cd ${BASEDIR}/services 
  ls * | grep ".service" | sed "s/.service//" 
)"

printf "name\t"
printf "status\t"
printf "status_code\t"
printf "started\t"
printf "finished\n"
for service in $services; do
  status="NA"
  status_code="NA"
  started="NA"
  finished="NA"

  pid_fn=${BASEDIR}/run/pids/${service}
  ec_fn=${BASEDIR}/var/exit/${service}/exit_code
  if [ -f "$pid_fn" ] && ${BASEDIR}/3rdparty/busybox/bin/kill -0 $(cat $pid_fn) 2>/dev/null; then
    status="running"
    started=$( ${BASEDIR}/3rdparty/busybox/bin/date -Iseconds -r $pid_fn )
  elif [ -f ${ec_fn} ]; then
    status="stopped"
    finished=$( ${BASEDIR}/3rdparty/busybox/bin/date -Iseconds -r $ec_fn )
    exit_inf=( $(cat ${ec_fn}) )
    status_code=${exit_inf[0]}
    started=${exit_inf[1]}
  fi

  printf "%s\t" "$service"
  printf "%s\t" "$status"
  printf "%s\t" "$status_code"
  printf "%s\t" "$started"
  printf "%s\n" "$finished"
done
